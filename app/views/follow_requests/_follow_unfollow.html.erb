<% unless sender == recipient %>
  <% follow_request = current_user.sent_follow_requests.find_by(recipient: recipient) %>

  <% if follow_request %>
    <% if !policy(current_user).show? %>
      <%= link_to follow_request, class: "#{dom_id(follow_request)} btn btn-outline-secondary", remote: true, method: :delete do %>
        Un-request
      <% end %>
    <% elsif follow_request.accepted? || policy(current_user).show? %>
      <%= link_to follow_request, class: "#{dom_id(follow_request)} btn btn-outline-secondary", remote: true, method: :delete do %>
        Un-follow
      <% end %>
    <% end %>
  <% else %>
    <%= render "follow_requests/form", follow_request: recipient.received_follow_requests.build %>
  <% end %>
<% end %>
