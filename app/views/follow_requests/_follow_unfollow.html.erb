<% unless sender == recipient %>
  <% follow_request = current_user.sent_follow_requests.find_by(recipient: recipient) %>

  <% if follow_request %>
    <% if follow_request.pending? %>
      <%= link_to "Un-request", follow_request_path(follow_request), method: :delete, class: "btn btn-outline-secondary", remote: true %>
    <% elsif follow_request.accepted? %>
      <%= link_to "Un-follow", follow_request_path(follow_request), method: :delete, class: "btn btn-outline-secondary", remote: true %>
    <% end %>
  <% else %>
    <%= render "follow_requests/form", follow_request: recipient.received_follow_requests.build %>
  <% end %>
<% end %>
